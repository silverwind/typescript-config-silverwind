{
  "include": [
    "${configDir}/**/*",
    "${configDir}/**/.*",
    "${configDir}/**/.*/**/*",
    "${configDir}/**/.*/**/.*",
  ],
  "exclude": [
    "${configDir}/**/.air/**",
    "${configDir}/**/.git/**",
    "${configDir}/**/.make/**",
    "${configDir}/**/.ruff_cache/**",
    "${configDir}/**/.swc/**",
    "${configDir}/**/.venv/**",
    "${configDir}/**/build/**",
    "${configDir}/**/dist/**",
    "${configDir}/**/node_modules/**",
    "${configDir}/**/persistent/**",
  ],
  "compilerOptions": {
    "outDir": "dist", // for type definitions
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowArbitraryExtensions": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": false, // https://github.com/rolldown/tsdown/issues/504
    "erasableSyntaxOnly": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "DOM.AsyncIterable", "ESNext"],
    "libReplacement": false,
    "noEmit": true,
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedSideEffectImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "verbatimModuleSyntax": true,
    "pretty": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    // strict
    "strict": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictBuiltinIteratorReturn": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false, // TODO: true, it's annoying because TS throws when strictNullChecks is false
    "noImplicitAny": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": false,
  }
}
